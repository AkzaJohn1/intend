<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="90dp"
        android:text="CONFIRMATION FORM"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:hint="name not given" />

    <TextView
        android:id="@+id/rollno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="150dp"
        android:inputType="textPersonName"
        android:hint="roll no not given" />
    <TextView
        android:id="@+id/batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="150dp"
        android:inputType="textPersonName"
        android:hint="batch not given" />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="250dp"
        android:layout_marginLeft="150dp"
        android:inputType="textPersonName"
        android:hint="Username not given" />
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="150dp"
        android:inputType="textPersonName"
        android:hint="password not given" />
</RelativeLayout>